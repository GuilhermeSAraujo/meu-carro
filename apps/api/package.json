{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc && tsc-alias && pnpm postbuild",
    "postbuild": "node -e \"try { if (process.env.NODE_ENV === 'production') process.exit(0); require('child_process').execSync('scripts/postbuild.sh', {stdio: 'inherit'}); } catch(e) { if (e.status === 127 || e.code === 'ENOENT') { console.log('Skipping postbuild - script not found or in production'); process.exit(0); } throw e; }\"",
    "clean": "rm -rf dist",
    "dev": "nodemon --exec \"node -r esbuild-register ./src/main.ts\" -e .ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "start": "node dist/main.js",
    "test": "jest --detectOpenHandles",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "dependencies": {
    "@hono/node-server": "catalog:",
    "@repo/logger": "workspace:*",
    "body-parser": "catalog:",
    "cors": "catalog:",
    "drizzle-orm": "catalog:",
    "hono": "catalog:",
    "jsonwebtoken": "catalog:",
    "pg": "catalog:",
    "pino": "catalog:"
  },
  "devDependencies": {
    "@jest/globals": "catalog:",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/body-parser": "catalog:",
    "@types/cors": "catalog:",
    "@types/jsonwebtoken": "catalog:",
    "@types/node": "catalog:",
    "@types/pg": "catalog:",
    "@types/supertest": "catalog:",
    "drizzle-kit": "catalog:",
    "esbuild": "catalog:",
    "esbuild-register": "catalog:",
    "eslint": "catalog:",
    "jest": "catalog:",
    "nodemon": "catalog:",
    "supertest": "catalog:",
    "tsc-alias": "catalog:",
    "typescript": "catalog:"
  }
}
